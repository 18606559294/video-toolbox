{
  "name": "video-toolbox",
  "version": "1.0.1",
  "description": "A powerful video download and conversion tool",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.videotoolbox.app",
    "productName": "Video Toolbox",
    "copyright": "Copyright 2025",
    "asar": {
      "smartUnpack": true
    },
    "compression": "maximum",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "package.json",
      "!**/*.map",
      "!**/*.ts",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "build/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Video Toolbox",
      "license": "build/license.txt"
    },
    "publish": {
      "provider": "github",
      "owner": "videotoolbox",
      "repo": "video-toolbox",
      "private": false,
      "releaseType": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/videotoolbox/video-toolbox.git"
  },
  "author": {
    "name": "Video Toolbox Team",
    "email": "support@videotoolbox.com"
  },
  "license": "MIT",
  "dependencies": {
    "check-disk-space": "^3.4.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "extract-zip": "^2.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "keytar": "^7.9.0",
    "puppeteer-core": "^21.7.0"
  },
  "devDependencies": {
    "electron": "^24.3.0",
    "electron-builder": "^24.9.1"
  }
}
